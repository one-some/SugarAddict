{
  "manifest_version": 3,
  "name": "SugarAddict",
  "version": "0.2",
  "description": "Story game manipulation tool",
  "icons": {
    "48": "logo.png"
  },
  "action": {
    "default_icon": {
      "48": "logo.png"
    }
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "host_permissions": ["*://*/"],
  "permissions": [
      "scripting"
  ],
  "minimum_chrome_version": "93",
  "web_accessible_resources": [{
    "matches": ["<all_urls>"],
    "resources": [
        "./engines/*",
        "/ui/*",
        "main.js"
    ]
  }]
}
